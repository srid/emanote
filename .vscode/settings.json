{
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "nixEnvSelector.nixFile": "${workspaceRoot}/shell.nix",
  "files.associations": {
    "*.tpl": "html"
  },
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  // Per https://marketplace.visualstudio.com/items?itemName=bradlc.vscode-tailwindcss
  "editor.quickSuggestions": {
    "strings": true
  },
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "editor.colorDecorators": true,
  "tailwindCSS.colorDecorators": true,
  "html.format.contentUnformatted": "pre,code,textarea",
  "html.format.wrapLineLength": 100,
  "html.format.unformattedContentDelimiter": "<!-- DoNotFormat -->",
  "workbench.colorCustomizations": {
    "activityBar.background": "#093427",
    "titleBar.activeBackground": "#0C4937",
    "titleBar.activeForeground": "#F0FCF9"
  }
}